{
    "name": "lexi-deck",
    "version": "1.0.0",
    "description": "A web application that allows a user to search fo an English word and learn its meaning and synonyms.",
    "main": "index.js",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "start": "live-server",
        "build:css:dev": "cross-env NODE_ENV=development npx tailwindcss -i ./src/styles/tailwind.css -o ./dist/output.css --watch",
        "build:css:prod": "cross-env NODE_ENV=production npx tailwindcss -i ./src/styles/tailwind.css -o ./dist/output.css"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SebZG/lexi-deck.git"
    },
    "keywords": [
        "dictionary",
        "synonyms","words",
        "english",
        "meaning"
    ],
    "author": "Sebastian Zapata Gutierrez",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/SebZG/lexi-deck/issues"
    },
    "homepage": "https://github.com/SebZG/lexi-deck#readme",
    "devDependencies": {
        "@eslint/js": "^9.15.0",
        "autoprefixer": "^10.4.20",
        "cross-env": "^7.0.3",
        "daisyui": "^4.12.14",
        "eslint": "^9.15.0",
        "globals": "^15.12.0",
        "jest": "^29.7.0",
        "live-server": "^1.2.2",
        "postcss": "^8.4.49",
        "tailwindcss": "^3.4.15"
    }
}
